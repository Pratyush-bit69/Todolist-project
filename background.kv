#: import FadeTransition kivy.uix.screenmanager.FadeTransition

<ContentNavigationDrawer>
    MDList:
        OneLineListItem:
            text: "Home"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.transition=FadeTransition()
                root.screen_manager.current = "main"
        OneLineListItem:
            text: "Settings"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.transition=FadeTransition()
                root.screen_manager.current = "settings"
        OneLineListItem:
            text:"Theme"
            on_press:
                root.nav_drawer.set_state("close")
                root.screen_manager.transition=FadeTransition()
                root.screen_manager.current = "theme"


MDScreen:
    screen_manager:screen_manager
    MDTopAppBar:
        pos_hint: {"top": 1}
        elevation: 4
        title: "To do list"
        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

    MDNavigationLayout:
        MDScreenManager:
            id:screen_manager
            MDScreen:
                name:"main"
                MDBoxLayout:
                    id:Color
                    size_hint:1,0.8999
                    size:root.size
                    pos:self.pos
                Image:
                    id:images
                    source:"images/no.jpg"
                    pos: self.pos
                    size_hint:1,.8999
                    size: root.size
                    allow_stretch:True
                    keep_ratio:False
                    opacity: 1.0
                MDIconButton:
                    icon: "pencil"
                    pos_hint:{"center_x":.95,"center_y":.075}
                    on_press:
                        root.screen_manager.current = "task"
                        root.screen_manager.transition.direction='left'

            MDScreen:
                name:"task"
                MDTextField:
                    id: data
                    mode:"rectangle"
                    icon_right:"pencil"
                    size_hint: .75,None
                    hint_text: "Enter the task"
                    pos_hint:{"center_x":.5 , "center_y": .7}

                MDRectangleFlatIconButton:
                    text:"submit"
                    pos_hint:{"center_x":.775,"center_y":.5}
                    size_hint_y:.075
                    size_hint_x:.2
                    icon:"book-plus-multiple-outline"
                    on_press:app.submit()

                MDRectangleFlatIconButton:
                    id:date
                    pos_hint:{"center_x":.18, "center_y": .5}
                    icon:"calendar-edit-outline"
                    text:"Date"
                    on_release: app.show_date_picker()
                    size_hint_y:.075
